---
import Page from "../components/Page.astro";

export interface Props {
	content: {
		title: string;
		description: string;
    keywords: string;
		publishDate?: string;
	};
}

const {
	content: { title, description, keywords, publishDate },
} = Astro.props as Props;
---

<Page title={title} description={description} keywords={keywords}>
  <article>
    <header>
      <h1 class="title">{title}</h1>
      {publishDate && <time>{publishDate}</time>}
    </header>
    <main>
      <slot></slot>
    </main>
  </article>
</Page>

<style>
	.title,
	time {
    display: inline;
		margin: 0;
	}

	time {
		color: var(--theme-text-lighter);
    white-space: nowrap;
	}

	.title {
		font-size: 1.5rem;
		font-weight: 700;
    margin-right: 1rem;
	}
</style>
